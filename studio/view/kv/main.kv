<ScreenMain>:
    #image_video: image_video
    #lien: lien
    md_bg_color: "#262626"

    MDBoxLayout:
        orientation:"horizontal"

        MDBoxLayout:
            md_bg_color: "#484848"
            spacing: dp(10)
            spacing: dp(10)

            CardImage:
                id: tt
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: .5, .5



        MDBoxLayout:
            md_bg_color: "#484848"
            padding: dp(10)
            spacing: dp(10)

            MDTabs:
                id: tabs




<CardImage>:
    md_bg_color: "#262626"

    MDBoxLayout:
        md_bg_color: "#ffffff"
        orientation: "vertical"
        padding: "10dp"

        Image:
            id: image
            size_hint: None, None
            width: root.width
            height: root.height
            pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: "horizontal"
            md_bg_color: "#ffffff"
            size_hint_y: .1
            pos_hint: {"center_x": .5}

            MDIconButton:
                icon: "menu"
                size_hint: .3, .3

            MDIconButton:
                icon: "crop-landscape"
                size_hint: .3, .3

            MDIconButton:
                icon: "content-save"
                size_hint: .3, .3

            MDIconButton:
                icon: "stop"
                size_hint: .3, .3


<CardAudio>


